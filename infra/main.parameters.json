{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environmentName": {
            "value": "${AZURE_ENV_NAME}"
        },
        "location": {
            "value": "${AZURE_LOCATION=eastus2}"
        },
        "backendContainerImage": {
            "value": "${SERVICE_API_IMAGE_NAME}"
        },
        "frontendContainerImage": {
            "value": "${SERVICE_WEB_IMAGE_NAME}"
        },
        "projectName": {
            "value": "shadcn-fastapi"
        },
        "azureOpenAIEndpoint": {
            "value": "${AZURE_OPENAI_ENDPOINT}"
        },
        "azureOpenAIApiKey": {
            "value": "${AZURE_OPENAI_API_KEY}"
        },
        "azureOpenAIDeploymentName": {
            "value": "${AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o}"
        },
        "azureOpenAIApiVersion": {
            "value": "${AZURE_OPENAI_API_VERSION=2025-04-01-preview}"
        },
        "azureOpenAIEmbeddingModel": {
            "value": "${AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large}"
        }
    }
}
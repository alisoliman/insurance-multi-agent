{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RiskAssessment",
  "description": "Structured output from the Risk Analyst agent",
  "type": "object",
  "properties": {
    "risk_level": {
      "type": "string",
      "enum": ["LOW_RISK", "MEDIUM_RISK", "HIGH_RISK"],
      "description": "Overall risk classification"
    },
    "risk_score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Numeric risk score (0-100, higher = more risk)"
    },
    "fraud_indicators": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Specific fraud indicators identified"
    },
    "analysis": {
      "type": "string",
      "description": "Detailed risk analysis explanation"
    }
  },
  "required": ["risk_level", "risk_score", "fraud_indicators", "analysis"]
}
